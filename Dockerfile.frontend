FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir streamlit requests pandas numpy

# Copy frontend code
COPY frontend/ ./frontend/

# Expose port
EXPOSE 8503

# Run Streamlit
CMD ["streamlit", "run", "frontend/app.py", "--server.port=8503", "--server.address=0.0.0.0"]
